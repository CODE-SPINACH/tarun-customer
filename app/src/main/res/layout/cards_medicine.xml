<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    card_view:cardCornerRadius="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/medicineCardLinearLayout1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:paddingRight="5dp"
            android:gravity="center"
            android:id="@+id/medicineCardLinearLayout2"
            android:orientation="horizontal">

            <CheckBox
                android:visibility="gone"
                android:id="@+id/medicineCardCheckBox1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.3"/>

            <TextView
                android:layout_width="@dimen/card_image_size"
                android:layout_height="@dimen/card_image_size"
                android:gravity="center"
                android:text="m"
                android:textSize="35sp"
                android:textColor="#eee"
                android:background="#55bbcc"/>

            <TextView
                android:id="@+id/medicineCardTextView1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="15dp"
                android:text="Crocin 250mg"/>

            <Spinner
                android:id="@+id/medicineCardSpinner1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_weight="0.5"/>

            <ImageView
                android:id="@+id/medicineCardImageView1"
                android:layout_width="0dp"
                android:layout_weight="0.3"
                android:layout_height="match_parent"
                android:padding="5dp"
                android:src="@drawable/ic_pill_dark"/>

            <LinearLayout
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_weight="0.6"
                android:layout_height="match_parent">

                <TextView
                    android:background="@drawable/rounded"
                    android:padding="6dp"
                    android:textColor="#FF305D"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="200/-"
                    android:id="@+id/medicineCardTextView3"/>
            </LinearLayout>

            <ImageButton
                android:background="@color/cardview_light_background"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:src="@drawable/ic_cancel"
                android:layout_weight="0.17"
                android:id="@+id/medicineCardImageButton1"
                android:scaleType="fitCenter"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/medicineCardLinearLayout3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1">
            <LinearLayout
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="90dp">
                <RadioGroup
                    android:id="@+id/medicineCardRadioGroup1"
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_weight="0.3"
                    android:layout_margin="10dp"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <RadioButton
                        android:visibility="gone"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/medicineCardRadioButton1"
                        android:text="TABLETS"
                        android:layout_weight="0.1"
                        android:textSize="12dp"/>

                    <RadioButton
                        android:visibility="gone"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/medicineCardRadioButton2"
                        android:text="STRIPS"
                        android:layout_weight="0.1"
                        android:textSize="12dp"/>

                    <RadioButton

                        android:visibility="gone"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/medicineCardRadioButton3"
                        android:text="SYRUPS"
                        android:layout_weight="0.1"
                        android:textSize="12dp"/>

                    </RadioGroup>

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>