<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="0dp"
    card_view:cardCornerRadius="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/medicineCardLinearLayout1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:gravity="center"
            android:layout_weight="2"
            android:id="@+id/medicineCardLinearLayout2"
            android:orientation="horizontal">

            <CheckBox
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:visibility="gone"
                android:id="@+id/medicineCardCheckBox1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>

            <TextView
                android:visibility="gone"
                android:layout_width="@dimen/card_image_size"
                android:layout_height="@dimen/card_image_size"
                android:gravity="center"
                android:text="m"
                android:textSize="35sp"
                android:textColor="#eee"
                android:background="#14C5D3"/>

            <LinearLayout
                android:paddingLeft="15dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1.5">

                <TextView
                    android:id="@+id/medicineCardTextView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="20dp"
                    android:layout_marginTop="5dp"
                    android:text="Crocin 250mg"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:visibility="gone"
                        android:gravity="center"
                        android:id="@+id/medicineCardTextViewLabel2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textSize="12dp"
                        android:text="QTY."/>

                    <Spinner
                        android:visibility="gone"
                        android:layout_marginTop="1dp"
                        android:id="@+id/medicineCardSpinner1"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"/>

                    <Spinner
                        android:id="@+id/osversions"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp" />

                    <TextView
                        android:id="@+id/selVersion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_below="@+id/osversions"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="20dp" />


                </LinearLayout>

                </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.55">

                <ImageView
                    android:visibility="gone"
                    android:id="@+id/medicineCardImageView1"
                    android:layout_width="0dp"
                    android:layout_weight="0.25"
                    android:layout_height="match_parent"
                    android:padding="15dp"
                    android:layout_gravity="left"
                    android:src="@drawable/ic_pill_dark"/>

                </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="0.80"
                android:gravity="right|top"
                android:layout_marginRight="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:padding="6dp"
                    android:layout_marginTop="20dp"
                    android:textColor="#FF305D"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="200/-"
                    android:id="@+id/medicineCardTextView3"/>

                <NumberPicker
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"></NumberPicker>

             <!--   <TextView
                    android:layout_marginTop="2dp"
                    android:id="@+id/medicineCardTextViewLabel3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12dp"
                    android:paddingLeft="3dp"
                    android:text="RATE"
                    android:gravity="right"/>-->

            </LinearLayout>





          <!--  <ImageButton
                android:background="@color/cardview_light_background"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:src="@drawable/ic_cancel"
                android:layout_weight="0.275"
                android:id="@+id/medicineCardImageButton1"
                android:scaleType="fitCenter"/>-->

        </LinearLayout>

        <LinearLayout
            android:visibility="gone"
            android:orientation="vertical"
            android:id="@+id/medicineCardLinearLayout3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1">
            <LinearLayout
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <RadioGroup
                    android:id="@+id/medicineCardRadioGroup1"
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:layout_margin="10dp"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <RadioButton
                        android:visibility="gone"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/medicineCardRadioButton1"
                        android:text="TABLETS"
                        android:textSize="12dp"
                        android:layout_marginRight="20dp"/>

                    <RadioButton
                        android:visibility="gone"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/medicineCardRadioButton2"
                        android:text="STRIPS"
                        android:textSize="12dp"
                        android:layout_marginRight="20dp"/>

                    <RadioButton
                        android:visibility="gone"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/medicineCardRadioButton3"
                        android:text="SYRUPS"
                        android:layout_weight="0.1"
                        android:textSize="12dp"/>

                    </RadioGroup>

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>