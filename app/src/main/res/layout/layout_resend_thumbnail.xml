<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/resendThumbnailRelativeLayout1"
    android:layout_width="@dimen/thumbnail_size"
    android:padding="3dp"
    android:layout_height="match_parent">

    <ImageView
        android:background="#eee"
        android:scaleType="fitXY"
        android:id="@+id/resendThumbnailImageView1"
        android:padding="0dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <ImageView
        android:background="#EE36B666"
        android:id="@+id/resendThumbnailImageView2"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@mipmap/ic_incorrect_image_white"
        android:layout_alignRight="@+id/resendThumbnailImageView1"/>

    <ImageView
        android:background="#EE36B666"
        android:id="@+id/resendThumbnailImageView3"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@mipmap/ic_correct_image_white"
        android:layout_alignRight="@+id/resendThumbnailImageView1"/>

</RelativeLayout>