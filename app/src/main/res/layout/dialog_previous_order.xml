<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:local="http://schemas.android.com/apk/res-auto"
        android:id="@+id/previousOrderToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        local:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        local:popupTheme="@style/ThemeOverlay.AppCompat.Light" >


        <ImageButton
            android:visibility="gone"
            android:padding="10dp"
            android:id="@+id/previousOrderDialogImageButton1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/abc_ic_ab_back_mtrl_am_alpha"
            android:background="#00FFFFFF"
            />
        <!-- </RelativeLayout>-->

        <TextView
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/previousOrderDialogTextView1"
            android:textSize="20sp"
            android:textColor="#FFF"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="right|center">
            <ImageButton
                android:id="@+id/previousOrderDialogImageButton2"
                android:padding="10dp"
                android:src="@drawable/abc_ic_clear_mtrl_alpha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00FFFFFF"/>
            </LinearLayout>

    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_below="@id/previousOrderToolbar"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:id="@+id/previousOrderDialogFrameLayout1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5"
            android:background="#EEE"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="#FFF"
            android:orientation="vertical">

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#2E9C58" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/previousOrderDialogTextView2"
                    android:background="#36B666"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="0"
                    android:textColor="#FFF"
                    android:textSize="20sp"
                    android:gravity="center|right"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:padding="4dp"
                    />

                <TextView
                    android:id="@+id/previousOrderDialogTextView5"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.5"
                    android:text="Items added"
                    android:textSize="14sp"
                    android:gravity="center|left"
                    />


                <TextView
                    android:id="@+id/previousOrderDialogTextView3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:text="0/-"
                    android:textSize="20sp"
                    android:gravity="center|right"
                    android:layout_marginRight="10dp"
                    android:textColor="#555"
                    />

                <View
                    android:layout_width="1dp"
                    android:layout_height="fill_parent"
                    android:background="#FFDDDDDD" />

                <TextView
                    android:id="@+id/previousOrderDialogTextView4"
                    android:padding="5dp"
                    android:textColor="#2E9C58"
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_weight="1.5"
                    android:layout_height="match_parent"
                    android:text="Cart"
                    android:textSize="18dp"
                    android:background="#FFF"/>

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>