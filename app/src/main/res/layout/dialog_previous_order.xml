<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:layout_weight="0.5"
            android:background="@drawable/olive_green_button_style"
            android:animateLayoutChanges="true"
            android:orientation="horizontal"
            android:layout_gravity="center">


        <!--<RelativeLayout
            android:layout_gravity="left"
            android:gravity="left"
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="3dp">-->
            <ImageButton
                android:layout_marginTop="3dp"
                android:layout_alignParentLeft="true"
                android:padding="6dp"
                android:layout_gravity="left|center"
                android:id="@+id/previousOrderDialogImageButton1"
                android:layout_margin="5dp"
                android:layout_width="45dp"
                android:layout_height="match_parent"
                android:scaleX="0.5"
                android:scaleY="0.6"
                android:maxHeight="5dp"
                android:maxWidth="5dp"
                android:src="@mipmap/ic_back_button"
                android:background="#00FFFFFF"
                />
       <!-- </RelativeLayout>-->

            <TextView
                android:layout_weight="0.49"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/previousOrderDialogTextView1"
                android:text="PREVIOUS ORDERS"
                android:layout_gravity="center|left"
                android:gravity="center|left"
                android:textSize="18sp"
                android:textColor="#FFF"
                android:layout_margin="7dp"/>



            </LinearLayout>

        <FrameLayout
            android:id="@+id/previousOrderDialogFrameLayout1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:padding="10dp"
            android:layout_weight="5"
            android:background="#DDD"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.6"
            android:background="#DDD">
        <Button
            android:layout_marginTop="2dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="5dp"
            android:id="@+id/previousOrderDialogButton1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:layout_gravity="center"
            android:gravity="center"
            android:textAllCaps="false"
            android:textColor="#FFF"
            android:textSize="20sp"
            android:text="ADD"
            android:background="@drawable/rounded"/>

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>