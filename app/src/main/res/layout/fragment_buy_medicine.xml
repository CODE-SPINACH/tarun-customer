<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eeeeee"
    android:orientation="vertical"
    tools:context="com.app.tarun.dc2.Fragments.BuyMedicineFragment"
    android:id="@+id/container">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/buyMedicineListViewContainer"
        android:background="#eee"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10">
        <TextView
            android:id="@+id/buyMedicineTextView1"
            android:textSize="40sp"
            android:gravity="center"
            android:text="Select your order from the options above"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </RelativeLayout>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:cardCornerRadius="0dp"
        android:layout_weight="1">
        <Button
            android:text="Checkout"
            android:textSize="20sp"
            android:background="@color/cardview_light_background"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </android.support.v7.widget.CardView>
    </LinearLayout>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        app:cardCornerRadius="0dp"
        android:layout_marginTop="15dp"
        app:cardElevation="5dp"
        android:layout_height="wrap_content">
    <LinearLayout
        android:animateLayoutChanges="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/buyMedicineLinearLayout1"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:weightSum="0.9">

            <ImageButton
                android:src="@drawable/abc_ic_menu_copy_mtrl_am_alpha"
                android:scaleType="fitCenter"
                android:padding="10dp"
                android:layout_weight="0.3"
                android:id="@+id/buyMedicineImageButton1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/sea_greenish_button_style"/>

            <ImageButton
                android:layout_weight="0.3"
                android:id="@+id/buyMedicineImageButton2"
                android:src="@drawable/ic_manually"
                android:scaleType="fitCenter"
                android:padding="10dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/yellow_button_style"/>

            <ImageButton
                android:src="@drawable/ic_previous_orders"
                android:id="@+id/buyMedicineImageButton3"
                android:scaleType="fitCenter"
                android:layout_weight="0.3"
                android:padding="10dp"
                android:layout_width="0dp"
                android:background="@drawable/orange_button_style"
                android:layout_height="match_parent"/>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/buyMedicineLinearLayout2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:weightSum="0.9"
            android:background="@color/cardview_light_background"
            android:gravity="center"
            android:padding="5dp"
            android:orientation="horizontal">
            <TextView
                android:textSize="15sp"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="Send\nPrescription"
                android:layout_weight="0.3"/>
            <TextView
                android:textSize="15sp"
                android:gravity="center"
                android:text="Enter\nManually"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.3"/>
            <TextView
                android:textSize="15sp"
                android:gravity="center"
                android:text="Previous\nOrder"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.3"/>
        </LinearLayout>
    </LinearLayout>
    </android.support.v7.widget.CardView>

</FrameLayout>