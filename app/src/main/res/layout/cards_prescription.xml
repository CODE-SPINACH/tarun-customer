<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true"
    android:layout_margin="5dp"
    card_view:cardCornerRadius="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        
        <LinearLayout
            android:gravity="center"
            android:id="@+id/prescriptionCardLinearLayout1"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="100dp">
            

            <ImageView
                android:id="@+id/prescriptionCardImageView1"
                android:layout_width="@dimen/card_image_size"
                android:scaleType="fitXY"
                android:layout_height="@dimen/card_image_size"/>

            <TextView
                android:id="@+id/prescriptionCardTextView1"
                android:layout_weight="2"
                android:gravity="center"
                android:layout_width="0dp"
                android:text="Days : as Prescribed"
                android:layout_height="match_parent" />

            <NumberPicker
                android:visibility="gone"
                android:id="@+id/prescriptionCardNumberPicker1"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="125dp"/>

            <ImageButton
                android:id="@+id/prescriptionCardImageButton1"
                android:background="@color/cardview_light_background"                android:layout_width="25dp"
                android:layout_gravity="top"
                android:layout_height="match_parent"
                android:src="@drawable/ic_cancel"
                android:scaleType="fitCenter"
                android:padding="2dp"/>

        </LinearLayout>
        <LinearLayout
            android:visibility="gone"
            android:id="@+id/prescriptionCardLinearLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <EditText
                android:id="@+id/prescriptionCardEditText1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Notes"/>
            <ImageButton
                    android:id="@+id/prescriptionCardImageButton2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#FF305D"
                    android:src="@drawable/ic_tick"/>

        </LinearLayout>

    </LinearLayout>


</android.support.v7.widget.CardView>