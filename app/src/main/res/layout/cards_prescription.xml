<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/prescriptionCardLinearLayout1"
    android:orientation="vertical">

    <!-- this redundant Linear layout has been added for padding in
     expandable  list view -->

        <LinearLayout
            android:padding="15dp"
            android:layout_marginTop="2dp"
            android:background="#FFF"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
                <ImageView
                    android:id="@+id/prescriptionCardImageView1"
                    android:scaleType="fitXY"
                    android:layout_width="100dp"
                    android:background="#CCC"
                    android:layout_height="100dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_weight="0.4"
                        android:layout_width="match_parent"
                        android:gravity="bottom"
                        android:layout_height="0dp">

                        <TextView
                            android:gravity="right"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="200/-"
                            android:textSize="20sp"
                            android:id="@+id/prescriptionCardTextView1"/>

                        </LinearLayout>

                    <TextView
                        android:layout_weight="0.5"
                        android:maxLines="2"
                        android:text=""
                        android:textColor="#777"
                        android:layout_marginLeft="10dp"
                        android:layout_width="match_parent"
                        android:ellipsize="end"
                        android:layout_height="0dp"
                        android:textSize="13sp"
                        android:id="@+id/prescriptionCardTextView2"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:gravity="right"
                        android:layout_weight="0.3">
                        <TextView
                            android:id="@+id/prescriptionCardTextView3"
                            android:layout_width="wrap_content"
                            android:textColor="#ea6125"
                            android:textSize="18sp"
                            android:layout_height="match_parent"
                            android:text="remove"/>
                        </LinearLayout>
                    </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
