<?xml version="1.0" encoding="utf-8"?>

    <LinearLayout
        android:background="#FFF"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:gravity="center"
        android:id="@+id/prescriptionCardLinearLayout1"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="110dp">


        <ImageView
            android:layout_weight="0"
            android:layout_marginLeft="20dp"
            android:id="@+id/prescriptionCardImageView1"
            android:layout_width="@dimen/card_image_size"
            android:scaleType="fitXY"
            android:layout_gravity="center|left"
            android:layout_height="@dimen/card_image_size"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="2">

    <LinearLayout
        android:layout_weight="2"
        android:paddingLeft="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <TextView
        android:id="@+id/prescriptionCardTextView1"
        android:layout_width="match_parent"
        android:textSize="18dp"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:text="PRESCRIPTION 1"/>

</LinearLayout>

    <LinearLayout
        android:layout_weight="1"
        android:paddingLeft="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_marginRight="15dp"
            android:id="@+id/prescriptionCardTextView2"
            android:layout_width="match_parent"
            android:gravity="right|bottom"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="#ea6125"
            android:textSize="16dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:text="Remove"/>

    </LinearLayout>

    </LinearLayout>

