<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFF"
    android:paddingLeft="15dp"
    android:paddingTop="5dp"
    android:id="@+id/orderCardLinearLayout1"
    android:descendantFocusability="beforeDescendants"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="7dp">

        <TextView
            android:id="@+id/orderCardTextView1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textStyle="bold"
            android:text="Ravi Gupta"
            android:layout_weight="2"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/orderCardTextView2"
            android:textSize="18sp"
            android:layout_weight="1"
            android:text="200/-"/>

        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/orderCardTextView3"
            android:layout_width="0dp"
            android:layout_weight="1.8"
            android:layout_height="wrap_content"
            android:text="22 July 2015"/>

        <TextView
            android:background="#ea6125"
            android:id="@+id/orderCardTextView4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="#FFF"
            android:textSize="15sp"
            android:text="Delivered"
            android:layout_weight="1"
            android:paddingLeft="9dp"/>

        </LinearLayout>

    <TextView
        android:id="@+id/orderCardTextView5"
        android:layout_marginRight="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:minLines="2"
        android:text="adfasdfasdfasd adfasdfasdfsadasdfasd asdf asdf"
        android:ellipsize="end"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp">

        <TextView
            android:textColor="#ea6125"
            android:id="@+id/orderCardTextView6"
            android:layout_width="0dp"
            android:layout_weight="1.5"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="pick medicines"
            android:layout_marginBottom="7dp"/>

        <TextView
            android:id="@+id/orderCardTextView7"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="#ea6125"
            android:textSize="18sp"
            android:text="repeat"
            android:layout_weight="1"/>

        </LinearLayout>
    </LinearLayout>
