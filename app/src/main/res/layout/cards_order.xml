<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" 
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:padding="5dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#EEE">

            <CheckBox
                android:id="@+id/orderCheckBox"
                android:visibility="gone"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_weight="0.3"
                android:layout_height="match_parent" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:paddingLeft="15dp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/orderNoTextView"
                        android:textSize="15dp"
                        android:text="drugCorner125"
                        android:layout_weight="2"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/orderAmountTextView"
                        android:textSize="18sp"
                        android:layout_weight="1"
                        android:text="2000/-"/>

                </LinearLayout>


                <TextView
                    android:id="@+id/orderDateTextView"
                    android:paddingLeft="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="22 July 2015"/>

                <TextView
                    android:id="@+id/orderAddressTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="15dp"
                    android:text="A-1002 Prerna Tower Vastrapur"/>

                <TextView
                    android:id="@+id/orderStatusTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#FF305D"
                    android:textSize="15dp"
                    android:text="STATUS : Delivered"
                    android:layout_margin="5dp"
                    android:paddingLeft="9dp"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>