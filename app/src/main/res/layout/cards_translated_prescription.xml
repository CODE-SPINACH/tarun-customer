<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/translatedPrescriptionLinearLayout1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:padding="0dp"
            android:gravity="center"
            android:id="@+id/translatedPrescriptionLinearLayout2"
            android:orientation="horizontal">

            <CheckBox
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/translatedPrescriptionCheckBox1"/>

            <ImageView
                android:id="@+id/translatedPrescriptionImageButton1"
                android:scaleType="fitXY"
                android:layout_width="90dp"
                android:background="#CCC"
                android:layout_height="@dimen/card_image_size"/>

            <TextView
                android:gravity="center|left"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:padding="13dp"
                android:text="14 DRUGS"
                android:id="@+id/translatedPrescriptionTextView1"
                android:layout_weight="0.7"/>

          <!--  <LinearLayout
                android:visibility="gone"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_weight="0.7"
                android:gravity="center"
                android:id="@+id/translatedPrescriptionLinearLayout3">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="35sp"
                    android:id="@+id/translatedPrescriptionTextView3"
                    android:text="+"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="days"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="45sp"
                    android:id="@+id/translatedPrescriptionTextView4"
                    android:text="-"/>

                </LinearLayout>-->

            <LinearLayout
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_weight="0.4"
                android:layout_height="match_parent"
                android:layout_marginLeft="25dp">

                <TextView
                    android:padding="7dp"
                    android:textColor="#FF305D"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2000/-"
                    android:id="@+id/translatedPrescriptionTextView2" />
            </LinearLayout>

            <ImageButton
                android:layout_marginRight="3dp"
                android:visibility="gone"
                android:background="@color/cardview_light_background"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:src="@drawable/ic_cancel"
                android:layout_weight="0.13"
                android:id="@+id/translatedPrescriptionImageButton2"
                android:scaleType="fitCenter"/>

            </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:id="@+id/translatedPrescriptionLinearLayout4">

             </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>