<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:orientation="vertical"  xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent" tools:context="com.app.drugcorner32.dc_template.feedback">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:layout_weight="0.3"
        android:background="@drawable/olive_green_button_style"
        android:animateLayoutChanges="true"
        android:orientation="horizontal"
        android:layout_gravity="center">


        <!--<RelativeLayout
            android:layout_gravity="left"
            android:gravity="left"
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="3dp">-->
        <ImageButton
            android:layout_marginTop="3dp"
            android:layout_alignParentLeft="true"
            android:padding="6dp"
            android:layout_gravity="left|center"
            android:id="@+id/feedbackBackButton"
            android:layout_margin="5dp"
            android:layout_width="45dp"
            android:layout_height="match_parent"
            android:scaleX="0.5"
            android:scaleY="0.6"
            android:maxHeight="5dp"
            android:maxWidth="5dp"
            android:src="@drawable/ic_back"
            android:background="#00FFFFFF"
            />
        <!-- </RelativeLayout>-->

        <TextView
            android:layout_weight="0.49"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/feedbackBackButtonText"
            android:text="Feedback"
            android:layout_gravity="center|left"
            android:gravity="center|left"
            android:textSize="18sp"
            android:textColor="#FFF"
            android:layout_margin="7dp"/>
    </LinearLayout>


    <EditText
        android:background="#EEE"
        android:layout_marginTop="50dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="top"
        android:singleLine="false"
        android:lines="5"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip" />

    <RatingBar
        android:id="@+id/ratingBar1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_gravity="center"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"/>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:cardCornerRadius="5dp"
        android:layout_weight="0.95"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="2dp"
        android:id="@+id/checkout"
        >
        <Button

            android:id="@+id/checkoutButton"
            android:textColor="#FFF"
            android:text="Submit"
            android:textSize="20sp"
            android:background="@drawable/rounded"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"/>
    </android.support.v7.widget.CardView>

</LinearLayout>
